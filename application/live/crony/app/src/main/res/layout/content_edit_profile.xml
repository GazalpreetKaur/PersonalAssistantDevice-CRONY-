<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.developtech.crony.EditProfile"
    tools:showIn="@layout/activity_edit_profile">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/bd"
            android:id="@+id/userprofileimg"
            android:paddingTop="10dp"/>
        <Button
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="190dp"
            android:id="@+id/btnSave"
            android:text="SAVE"
            android:textColor="@color/white"
            style="@style/editextstyle"
            android:background="@color/editprofilebtncolor"
            android:elevation="10dp"/>
        <Button
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancel"
            android:text="Cancel"
            android:layout_toRightOf="@+id/btnSave"
            style="@style/editextstyle"
            android:background="@color/editprofilebtncolor"
            android:textColor="@color/white"
            android:elevation="10dp"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <com.developtech.crony.MyEditText
        android:id="@+id/etuser"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_user_grey"
        android:drawablePadding="@dimen/ic_margin"
        android:layout_margin="@dimen/etmargin"
        android:paddingLeft="@dimen/ic_margin"
        android:gravity="center|left"
        android:singleLine="true"/>
    <com.developtech.crony.MyEditText
        android:id="@+id/etname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_user_color"
        android:drawablePadding="@dimen/ic_margin"
        android:layout_margin="@dimen/etmargin"
        android:paddingLeft="@dimen/ic_margin"
        android:gravity="center|left"
        android:singleLine="true"/>


    <com.developtech.crony.MyEditText
        android:id="@+id/etmobile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/mobile_ic_color"
        android:drawablePadding="@dimen/ic_margin"
        android:layout_margin="@dimen/etmargin"
        android:paddingLeft="@dimen/ic_margin"
        android:gravity="center|left"
        android:singleLine="true"/>
    <com.developtech.crony.MyTextView
        android:id="@+id/txtdob"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_dob_color"
        android:drawablePadding="@dimen/ic_margin"
        android:layout_margin="@dimen/etmargin"
        android:paddingLeft="@dimen/ic_margin"
        android:gravity="center|left"
        android:singleLine="true"

        style="@style/editextstyle"/>
    <com.developtech.crony.MyEditText
        android:id="@+id/etemail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_mail_color"
        android:drawablePadding="@dimen/ic_margin"
        android:layout_margin="@dimen/etmargin"
        android:paddingLeft="@dimen/ic_margin"
        android:gravity="center|left"
        android:singleLine="true"/>
    <com.developtech.crony.MyEditText
        android:id="@+id/etlocation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@android:drawable/ic_dialog_map"
        android:drawablePadding="@dimen/ic_margin"
        android:layout_margin="@dimen/etmargin"
        android:paddingLeft="@dimen/ic_margin"
        android:gravity="center|left"
        android:singleLine="true"/>


</LinearLayout>
</ScrollView>