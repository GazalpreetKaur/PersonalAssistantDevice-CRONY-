<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/signincolorstart</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="editextstyle">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:textColorHint">@color/hintcolor</item>
        <item name="android:elevation">@dimen/etelevation</item>
        <item name="android:textCursorDrawable">@drawable/coloured_cursor</item>
        <item name="android:background">@drawable/rounded_edittext</item>
    </style>

    <style name="greybuttonstyle">
        <item name="android:textColor">@color/buttontextcolor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="dobtextviewstyle">
        <item name="android:textColorHint">@color/hintcolor</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:elevation">@dimen/etelevation</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
    </style>

    <style name="mytextviewbighint">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="textviewstyle">
        <item name="android:textColor">@color/textviewtextcolor</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="textviewhintstyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="buttonstyle">
        <item name="android:textColor">@color/buttontextcolor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="facebookbuttonstyle">
        <item name="android:drawableLeft">@drawable/ic_fb</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/buttontextcolor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_signinwithfacebook</item>
    </style>

    <style name="googlebuttonstyle">
        <item name="android:drawableLeft">@drawable/ic_google_</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/buttontextcolor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_signinwithgoogle</item>
    </style>

    <style name="floatingbuttoncolor">
        <item name="android:background">#a09fed</item>

    </style>

</resources>
