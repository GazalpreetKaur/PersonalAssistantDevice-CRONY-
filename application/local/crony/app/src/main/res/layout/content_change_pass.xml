<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.developtech.crony.ChangePass"
    tools:showIn="@layout/activity_change_pass"
    android:orientation="vertical">
    <com.developtech.crony.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Password"
        android:id="@+id/txt1"
        android:layout_marginBottom="10dp"/>
    <com.developtech.crony.MyEditText
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingLeft="@dimen/ic_margin"
        style="@style/editextstyle"
        android:drawableLeft="@drawable/ic_password"
        android:inputType="textPassword"
        android:layout_marginBottom="20dp"
        android:id="@+id/etcurrPass"/>
    <com.developtech.crony.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:id="@+id/txt2"
        android:layout_marginBottom="10dp"/>
    <com.developtech.crony.MyEditText
        android:layout_width="match_parent"
        android:layout_height="42dp"
        style="@style/editextstyle"
        android:paddingLeft="@dimen/ic_margin"
        android:drawableLeft="@drawable/ic_password"
        android:id="@+id/etnewPass"
        android:inputType="textPassword"/>
    <com.developtech.crony.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimum 6 characters"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"/>
    <com.developtech.crony.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Pasword"
        android:id="@+id/txt3"
        android:layout_marginBottom="10dp"/>
    <com.developtech.crony.MyEditText
        android:layout_width="match_parent"
        android:layout_height="42dp"
        style="@style/editextstyle"
        android:drawableLeft="@drawable/ic_password"
        android:id="@+id/etconfPass"
        android:paddingLeft="@dimen/ic_margin"
        android:layout_marginBottom="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.developtech.crony.MyButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/greybuttonstyle"
            android:text="SAVE"
            android:id="@+id/btnsave"/>
        <com.developtech.crony.MyButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/greybuttonstyle"
            android:layout_marginLeft="10dp"
            android:text="CANCEL"
            android:id="@+id/btncancel"/>

    </LinearLayout>

</LinearLayout>
