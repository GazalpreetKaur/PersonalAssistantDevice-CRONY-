<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/buttontextcolor"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.developtech.crony.Forgot_Password"
    tools:showIn="@layout/activity_forgot__password">
    <com.developtech.crony.MyTextView
        android:id="@+id/tvmobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Mobile Number"
        style="@style/textviewhintstyle"

        />
    <com.developtech.crony.MyEditText
        android:id="@+id/etmobile"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        style="@style/editextstyle"
        android:layout_margin="@dimen/etmargin"
        android:padding="10dp"
        android:drawableLeft="@drawable/mobile_ic_color"
        android:drawablePadding="10dp"
        android:inputType="phone"
        android:text="+91">

    </com.developtech.crony.MyEditText>
    <requestFocus

        />

    <TextView
        android:id="@+id/tvtimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btnforgot"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        style="@style/buttonstyle"
        android:text=">"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        />
    <com.developtech.crony.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        style="@style/textviewhintstyle"
        android:text="We have sent you OTP. It will be entered automatically if the mobile number is valid"
        />
    <Button
        android:id="@+id/btnresend"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        style="@style/buttonstyle"
        android:text="Resend otp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        />
    <FrameLayout
        android:id="@+id/frmlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"/>
    </FrameLayout>


</LinearLayout>
