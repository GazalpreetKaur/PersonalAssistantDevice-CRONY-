                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <ImageButton
                android:id="@+id/ib2"
                android:layout_width="match_parent"
                android:src="@android:drawable/ic_input_add"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/ib3"
                android:layout_width="match_parent"
                android:src="@android:drawable/ic_input_add"
                android:layout_height="wrap_content" />
