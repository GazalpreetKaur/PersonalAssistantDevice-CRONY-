<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/buttontextcolor"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.developtech.crony.SignUp"
        tools:showIn="@layout/activity_sign_up">

        <com.developtech.crony.MyEditText
            android:id="@+id/etname"
            style="@style/editextstyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_user_grey"
            android:drawablePadding="@dimen/ic_margin"
            android:hint="@string/hint_enter_name"
            android:layout_margin="@dimen/etmargin"
            android:paddingLeft="@dimen/ic_margin" />

        <com.developtech.crony.MyEditText
            android:id="@+id/etuname"
            style="@style/editextstyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_user_color"
            android:drawablePadding="@dimen/ic_margin"
            android:hint="@string/hint_enter_username"
            android:paddingLeft="@dimen/ic_margin"
            android:layout_margin="@dimen/etmargin"/>

        <com.developtech.crony.MyEditText
            android:id="@+id/etemail"
            style="@style/editextstyle"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_mail_color"
            android:drawablePadding="@dimen/ic_margin"
            android:hint="@string/hint_enter_email"
            android:layout_margin="@dimen/etmargin"
            android:paddingLeft="@dimen/ic_margin" />

        <com.developtech.crony.MyEditText
            android:id="@+id/etpassword"
            style="@style/editextstyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="@dimen/ic_margin"
            android:layout_margin="@dimen/etmargin"
            android:hint="@string/hint_enter_password"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/ic_margin" />

        <com.developtech.crony.MyEditText
            android:id="@+id/etconfirmpassword"
            style="@style/editextstyle"
            android:layout_margin="@dimen/etmargin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_password_grey"
            android:drawablePadding="@dimen/ic_margin"
            android:hint="@string/hint_confirm_password"
            android:paddingLeft="@dimen/ic_margin" />

        <com.developtech.crony.MyEditText
            android:id="@+id/etmobilenumber"
            style="@style/editextstyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:drawableLeft="@drawable/mobile_ic_color"
            android:drawablePadding="@dimen/ic_margin"
            android:hint="@string/hint_enter_mobile"
            android:maxLength="10"
            android:paddingLeft="@dimen/ic_margin"
            android:layout_margin="@dimen/etmargin"
            />

        <com.developtech.crony.MyTextView
            android:id="@+id/tvdateofbirth"
            style="@style/dobtextviewstyle"
            android:layout_margin="@dimen/etmargin"
            android:layout_width="match_parent"
            android:gravity="left|center"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_dob_color"
            android:drawablePadding="@dimen/ic_margin"
            android:hint="@string/hint_enter_dateofbirth"
            android:paddingLeft="@dimen/ic_margin" />

        <com.developtech.crony.MyButton
            android:id="@+id/btnsignup"
            android:layout_width="@dimen/buttonwidth"
            style="@style/buttonstyle"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/button_signin"
            android:text="@string/button_sign_up"
            android:textColor="@color/buttontextcolor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">

            <com.developtech.crony.MyTextView
                android:id="@+id/tvalreadyhaveanaccount"
                android:layout_width="0dp"
                style="@style/textviewhintstyle"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:text="Already have an account ? " />

            <com.developtech.crony.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/textviewstyle"
                android:layout_toRightOf="@id/tvalreadyhaveanaccount"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Sign in"
                android:textColor="@color/signincolorstart" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
